{
  "name": "subscription-management-tests",
  "version": "1.0.0",
  "description": "Test suite for Subscription Management Frontend",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "serve": "http-server ../ -p 3000 -c-1",
    "test:full": "npm run serve & sleep 3 && npm run test:e2e && kill %1"
  },
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "@testing-library/dom": "^9.3.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/user-event": "^14.4.3",
    "babel-jest": "^29.5.0",
    "cypress": "^12.17.0",
    "http-server": "^14.1.1",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jsdom": "^22.1.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/setup/jest.setup.js"],
    "moduleFileExtensions": ["js", "json"],
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "testMatch": [
      "<rootDir>/unit/**/*.test.js",
      "<rootDir>/integration/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "../scripts/**/*.js",
      "!../scripts/**/types.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"]
  }
}